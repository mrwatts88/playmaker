{
  "name": "playmaker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "drizzle-kit push",
    "db:push:test": "tsx scripts/push-test-db.ts",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_ENV=test jest --coverage",
    "nba:sync-lineups": "DOTENV_CONFIG_PATH=.env npx tsx -r dotenv/config scripts/nba/sync-lineups.ts",
    "nba:sync-game-events": "DOTENV_CONFIG_PATH=.env npx tsx -r dotenv/config scripts/nba/sync-game-events.ts",
    "sanity": "npm run lint && npm i --legacy-peer-deps && npm run build && npm test && npm run start"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.42.0",
    "lucide-react": "^0.501.0",
    "nanoid": "^5.1.5",
    "next": "15.3.1",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "swagger-ui-react": "^5.21.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/swagger-ui-react": "^5.18.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "jest": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
